<Window x:Class="InclusiPlay.DataBase.Search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InclusiPlay.DataBase"
        mc:Ignorable="d"
        Title="Search Window" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Search Criteria:"/>
            <TextBox x:Name="txtSearchCriteria" Margin="0,0,0,10"/>

            <Button Content="Search" Click="SearchButton_Click" Margin="0,0,0,10"/>

            <DataGrid x:Name="dataGrid" AutoGenerateColumns="True"/>
        </StackPanel>
    </Grid>
</Window>
