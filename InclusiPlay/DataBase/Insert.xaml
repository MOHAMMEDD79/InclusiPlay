<Window x:Class="InclusiPlay.DataBase.Insert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InclusiPlay.DataBase"
        mc:Ignorable="d"
        Title="Insert Window" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="txtName" Margin="0,0,0,10"/>

            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,10"/>

            <TextBlock Text="Gender:"/>
            <ComboBox x:Name="cmbGender" Margin="0,0,0,10">
                <ComboBoxItem Content="Male"/>
                <ComboBoxItem Content="Female"/>
            </ComboBox>

            <Button Content="Insert" Click="InsertButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
