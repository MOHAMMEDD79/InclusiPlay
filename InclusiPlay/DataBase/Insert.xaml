<!-- Insert.xaml -->
<Window x:Class="InclusiPlay.DataBase.Insert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Insert User" Height="350" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="txtName" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="txtPassword" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Gender:"/>
            <ComboBox x:Name="cmbGender" Width="200" Margin="0,0,0,10">
                <ComboBoxItem>Male</ComboBoxItem>
                <ComboBoxItem>Female</ComboBoxItem>
            </ComboBox>
            <Button Content="Insert" Click="InsertButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
