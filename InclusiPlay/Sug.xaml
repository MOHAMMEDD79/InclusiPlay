<Window x:Class="InclusiPlay.Sug"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InclusiPlay"
        mc:Ignorable="d"
         Title="MainWindow" Height="350" Width="525">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Username:"/>
            <TextBox x:Name="txtUsername" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Message:"/>
            <TextBox x:Name="txtMessage" Width="200" Height="100" Margin="0,0,0,10"/>

            <Button Content="Send Message" Click="SendMessage_Click"/>
        </StackPanel>
    </Grid>
</Window>
