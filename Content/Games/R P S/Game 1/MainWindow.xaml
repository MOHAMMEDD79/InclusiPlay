<Window x:Class="Game_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_1"
        mc:Ignorable="d"
        Title="Rock Paper Scissors" Height="350" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Rock, Paper, Scissors" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Rock" Click="Button_Click"/>
            <Button Content="Paper" Click="Button_Click"/>
            <Button Content="Scissors" Click="Button_Click"/>
            <TextBlock x:Name="resultText" FontSize="18" FontWeight="Bold" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
