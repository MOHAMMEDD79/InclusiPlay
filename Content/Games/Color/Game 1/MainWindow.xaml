<Window x:Class="Game_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_1"
        mc:Ignorable="d"
        Title="Color Guessing Game" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Color Guessing Game" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <Rectangle x:Name="colorRectangle" Width="100" Height="100" Margin="0,0,0,20"/>
            <ComboBox x:Name="colorOptions" Width="150" Margin="0,0,0,20"/>
            <Button Content="Guess" Click="Button_Click"/>
            <TextBlock x:Name="resultText" FontSize="16" FontWeight="Bold" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
