<Window x:Class="Game_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_1"
        mc:Ignorable="d"
        Title="Guess the Number" Height="200" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Guess the Number (1-100)" Margin="0,0,0,10"/>
            <TextBox x:Name="txtGuess" Width="100" Margin="0,0,0,10"/>
            <Button Content="Submit Guess" Click="BtnSubmit_Click"/>
            <Label x:Name="lblResult" Content="" Margin="0,10,0,0"/>
            <Label x:Name="lblAttempts" Content="Attempts: 0" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
