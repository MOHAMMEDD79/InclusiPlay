<Window x:Class="Game_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_1"
        mc:Ignorable="d"
        Title="Tic Tac Toe" Height="300" Width="300">
    <Grid x:Name="grid" DataContext="{Binding RelativeSource={RelativeSource Self}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btn00" Content="{Binding Btn00Content}" Grid.Row="0" Grid.Column="0" Click="Button_Click"/>
        <Button x:Name="btn01" Content="{Binding Btn01Content}" Grid.Row="0" Grid.Column="1" Click="Button_Click"/>
        <Button x:Name="btn02" Content="{Binding Btn02Content}" Grid.Row="0" Grid.Column="2" Click="Button_Click"/>
        <Button x:Name="btn10" Content="{Binding Btn10Content}" Grid.Row="1" Grid.Column="0" Click="Button_Click"/>
        <Button x:Name="btn11" Content="{Binding Btn11Content}" Grid.Row="1" Grid.Column="1" Click="Button_Click"/>
        <Button x:Name="btn12" Content="{Binding Btn12Content}" Grid.Row="1" Grid.Column="2" Click="Button_Click"/>
        <Button x:Name="btn20" Content="{Binding Btn20Content}" Grid.Row="2" Grid.Column="0" Click="Button_Click"/>
        <Button x:Name="btn21" Content="{Binding Btn21Content}" Grid.Row="2" Grid.Column="1" Click="Button_Click"/>
        <Button x:Name="btn22" Content="{Binding Btn22Content}" Grid.Row="2" Grid.Column="2" Click="Button_Click"/>
    </Grid>
</Window>
