<Window x:Class="Game_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_1"
        mc:Ignorable="d"
        Title="Word Scramble" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Word Scramble" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock x:Name="scrambledWordText" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBox x:Name="userInput" Width="200" Margin="0,0,0,20"/>
            <Button Content="Submit" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
