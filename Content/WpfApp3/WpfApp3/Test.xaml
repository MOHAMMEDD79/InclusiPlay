    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="White"/>
            <GradientStop Color="#FF80B6FF" Offset="1"/>
            <GradientStop Color="#FFA205FF" Offset="0.508"/>
        </LinearGradientBrush>
    </Window.Background>


































    <ScrollViewer VerticalScrollBarVisibility="Auto">











        <StackPanel Margin="0,0,0,10" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False" CanHorizontallyScroll="True" CanVerticallyScroll="True">
            <!-- Field Selection Label -->
            <TextBlock Text="Choose the field in which you want to be tested" Margin="10" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False"/>
            <Button x:Name="pre"                          
                            BorderThickness="0"
                            Content="Pre"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand" Width="350" Click="pre_Click2" RenderTransformOrigin="0.5,0.5"                        
                          
                           >
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="-610" Y="-23"/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="#462AD8"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#28AEED"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Width="100" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!-- Grid for Buttons -->
            <Grid Margin="10" Height="1080" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" Width="1920" UseLayoutRounding="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Margin="20,0,0,-768" FlowDirection="RightToLeft" ScrollViewer.HorizontalScrollBarVisibility="Visible" CanHorizontallyScroll="True" CanVerticallyScroll="True" Width="600" HorizontalAlignment="Left">
                    <!-- Left Buttons -->
                    <Button x:Name="Math" Grid.Column="0" Content="Math" Template="{DynamicResource RYellow}"      Foreground="White" Margin="10" Height="300" Width="350" FlowDirection="RightToLeft" ScrollViewer.HorizontalScrollBarVisibility="Visible" FontSize="50" FontFamily="Arial" Click="Math_Click">
                        <Button.Background>
                            <ImageBrush TileMode="Tile" ImageSource="/math.jpeg"/>
                        </Button.Background>
                        <Button.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.BorderBrush>
                    </Button>
                    <Button Grid.Column="0" Content="Chemistry" Template="{DynamicResource RR}" Foreground="White" Margin="10" Height="300" Width="350" FlowDirection="RightToLeft" ScrollViewer.HorizontalScrollBarVisibility="Visible" FontSize="50" FontFamily="Arial" Click="Chemistry_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/chemistry-beakers_27c5571306.jpg"/>
                        </Button.Background>
                    </Button>
                    <Button Content="Islamic Religion" Template="{DynamicResource RG}" Foreground="White" Height="300" Width="350" FlowDirection="RightToLeft" ScrollViewer.HorizontalScrollBarVisibility="Visible" FontSize="50" FontFamily="Arial" Click="Islam_Click" >
                        <Button.Background>
                            <ImageBrush ImageSource="/b2ap3_large_quran_peace.jpg"/>
                        </Button.Background>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" Grid.IsSharedSizeScope="True" UseLayoutRounding="True" CanHorizontallyScroll="True" CanVerticallyScroll="True" Width="600" HorizontalAlignment="Left" Margin="187,0,0,0" Grid.ColumnSpan="2">
                    <!-- Middle Buttons -->
                    <Button Grid.Column="1" Content="Physics" Template="{DynamicResource RB}" Foreground="White" Margin="10" Height="300" Width="350" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False" ScrollViewer.VerticalScrollBarVisibility="Visible" FontSize="50" FontFamily="Arial" Click="Physics_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/physics.2e16d0ba.fill-10000x10000.jpg"/>
                        </Button.Background>
                    </Button>
                    <Button Grid.Column="1" Content="Biology" Template="{DynamicResource RDB}" Foreground="White" Margin="10" Height="300" Width="350" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False" ScrollViewer.VerticalScrollBarVisibility="Visible" FontSize="50" FontFamily="Arial" Click="Biology_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/What-is-Medical-Biology-Bolton-Uni__ResizedImageWzYwMCwzMzhd.jpg"/>
                        </Button.Background>
                    </Button>
                    <Button Grid.Column="1" Content="Geography" Template="{DynamicResource RBB}" Margin="10,10,10,10" Height="300" Width="350" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False" ScrollViewer.VerticalScrollBarVisibility="Visible" Foreground="White" BorderBrush="#FF787878" FontSize="50" FontFamily="Arial" Click="Geography_Click"  >
                        <Button.Background>

                            <ImageBrush ImageSource="/Untitled-design-81.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <StackPanel Margin="408,0,272,-768" Grid.ColumnSpan="2" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False" CanHorizontallyScroll="True" CanVerticallyScroll="True" Width="600">
                    <!-- Right Buttons -->
                    <Button Grid.Column="2" Content="Galaxies Science" Template="{DynamicResource RP}" Foreground="White" Margin="10" Height="300" Width="350" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False" FontSize="50" FontFamily="Arial" Click="Galaxies_Click" >
                        <Button.Background>
                            <ImageBrush ImageSource="/35052389e171f0d2a1dd8c8f7543de7b.jpg"/>
                        </Button.Background>
                    </Button>
                    <Button Grid.Column="2" Content="Engineering" Template="{DynamicResource RPP}" Foreground="White" Margin="10" Height="300" Width="350" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False" FontSize="50" FontFamily="Arial" FontWeight="Bold" Click="Engineering_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/engineering_1-300x197.png" Opacity="1"  />
                        </Button.Background>
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="0" Direction="0" BlurRadius="500" Color="Black" Opacity="1"/>
                        </Button.Effect>
                    </Button>



                    <Button Content="History" Template="{DynamicResource RO}" Foreground="White" Height="300" Width="350" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False" FontSize="50" FontFamily="Arial" Click="History_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/adventure-ancient-antique-697662.x88fbe810.jpg" Stretch="Fill" Opacity="1"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Window>
